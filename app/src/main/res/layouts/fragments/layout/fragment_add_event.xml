<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white">

    </FrameLayout>

    <TextView
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_an_event"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:counterEnabled="true"
        app:counterMaxLength="20"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Large">
        <EditText
            android:id="@+id/addevent_event_name_et"
            android:hint="@string/event_name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="text"


            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Large">
        <EditText
            android:id="@+id/addevent_starting_location_et"
            android:hint="@string/starting_location"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textAutoComplete"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Large">
        <EditText
            android:id="@+id/addevent_destination_et"
            android:hint="@string/destination"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textAutoComplete"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Large">
        <EditText
            android:id="@+id/addevent_departure_date_et"
            android:hint="@string/departure_date"
            android:inputType="date"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Large">
        <EditText
            android:id="@+id/addevent_departure_time_et"
            android:hint="@string/departure_time"
            android:inputType="time"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Large">
        <EditText
            android:id="@+id/addevent_budget_et"
            android:hint="@string/budget"
            android:inputType="number"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/addEvent_add_tv"
        android:text="@string/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:textSize="25sp"
        />



</LinearLayout>