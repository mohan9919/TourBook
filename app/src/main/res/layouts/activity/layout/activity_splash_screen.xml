<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/bavkgroudtourbbookwhiteblue"
    >
    <!--tools:context="com.anwar.splashscreen.SplashScreen"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:id="@+id/projectLogo_IV_id"/>

        <TextView
            android:textColor="@color/youtubered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="25sp"
            android:gravity="center"
            android:text="Tour Book"/>


        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/glideLogo_IV_id"/>


    </LinearLayout>
    


</LinearLayout>
